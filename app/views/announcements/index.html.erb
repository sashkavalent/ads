<% if @announcements.blank? %>
  <div>No new announcement...</div>
<% else %>

  <%= link_to 'clear all', clear_announcements_path, :method => :delete %>
  <ul class='models'>
    <% @announcements.map do |an| %>
      <li>
        <%= render 'announcement', :announcement => an %>
      </li>
    <% end %>
  </ul>

<% end %>
