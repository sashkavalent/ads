%header.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      = link_to 'ADS', root_path, id: 'logo'
      %nav
        %ul.nav.pull-right
          %li= link_to 'Home', root_path
          %li= link_to 'Help', help_path
          - if current_user.try(:role).try(:user?)
            %li= link_to 'Announcements', announcements_path
          - if current_user.try(:role).try(:admin?)
            %li.dropdown
              = link_to '#', :class => "dropdown-toggle", |
                'data-toggle' => 'dropdown' do            |
                Management
                %b.caret
              %ul.dropdown-menu{:role => "menu"}
                %li= link_to 'Main', current_user
                %li= link_to 'Users', users_path
                %li= link_to 'Ad types', AdType if can? :manage, AdType
                %li= link_to 'Places', Place if can? :manage, Place
                %li= link_to 'Sections', Section if can? :manage, Section
                %li= link_to 'Currencies', Currency if can? :manage, Currency
          = render 'layouts/login_items'
