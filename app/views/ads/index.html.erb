<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" %>
<%= csrf_meta_tag %>

<%= form_tag ads_path, :method => :get, :remote => true do %>

  <%= select_tag(:ad_type_id, options_for_select([['All ads', 0]]) +
    options_from_collection_for_select(@ad_types, :id, :name, @default_ad_type_id)) %>

  <%= select_tag(:created_id, options_for_select([['Newer first', 1], ['Older first', 2]], @default_created_id.to_i)) %><br>

  <%= text_field_tag :search, params[:search], :placeholder => 'key word' %><br>

  <%= submit_tag :search %>
  <%= link_to 'reset', '#',  :onclick => "reset()"%>
<% end %>

<%= render 'ads' %>
