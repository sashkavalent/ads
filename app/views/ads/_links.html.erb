<% if can? :destroy, ad %>
  <%= link_to 'delete', ad, method: :delete,
                            data: { confirm: 'You  sure?' },
                            title: ad.content %>
<% end %>
<% if ((can? :update, ad) && ad.drafting?) %>
  <%= link_to 'edit', ad %>
<% end %>
<% if can? :change_state, ad %>
  <% ad.state_transitions.each do |transition| %>
    <%= link_to transition.event, { :controller => 'ads', :action => 'change_state', :id => ad, :state_event => transition.event }, :method => :put %>
  <% end %>
<% end %>
